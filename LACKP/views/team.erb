  <!DOCTYPE html>
  <html lang="en">
    <head>
    	<title>% @team %</title>
      <link rel="stylesheet" href="/team.css" />
    </head>
<body>
<h1><%= @team %></h1>
	<ul>
		<h2>First Name</h2>
		<%@roster.each do |player|%>
    		  <li><%=player["first_name"]%></li>
        <%end%>
    </ul>
    <ul>
    	<h2>Last Name</h2>
		<%@roster.each do |player|%>
    		  <li><%=player["last_name"]%></li>
        <%end%>
    </ul>
    <ul>
    	<h2>Position</h2>
		<%@roster.each do |player|%>
    		  <li><%=player["position"]%></li>
        <%end%>
    </ul>
</body>
<h3><a href="/mainpage"> Return to Home Page</h3>
</html>
